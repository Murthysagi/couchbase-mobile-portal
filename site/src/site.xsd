<?xml version="1.0" encoding="UTF-8" ?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
	
	<!-- ==== -->
	<!-- Docs -->
	<!-- ==== -->
	
	<xs:include schemaLocation="../../docs/src/docs.xsd"/>
	<xs:include schemaLocation="../../apis/couchbase-lite/src/api.xsd"/>
	
	<!-- ==== -->
	<!-- Site -->
	<!-- ==== -->
	
	<xs:element name="site">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="title" type="xs:string" minOccurs="1" maxOccurs="1"/>
				<xs:element name="subtitle" type="xs:string" minOccurs="0" maxOccurs="1"/>
				<xs:element name="copyright" type="xs:string" minOccurs="0" maxOccurs="1"/>
                <xs:element name="terms-of-use" minOccurs="0" maxOccurs="1">
                    <xs:complexType>
			            <xs:choice minOccurs="0" maxOccurs="1">
                            <xs:element ref="ref"/>
                            <xs:element ref="external-ref"/>
                        </xs:choice>
			        </xs:complexType>
                </xs:element>
                <xs:element name="privacy-policy" minOccurs="0" maxOccurs="1">
                    <xs:complexType>
                        <xs:choice minOccurs="0" maxOccurs="1">
                            <xs:element ref="ref"/>
                            <xs:element ref="external-ref"/>
                        </xs:choice>
                    </xs:complexType>
                </xs:element>
                <xs:element name="programming-languages" minOccurs="0" maxOccurs="1">
                    <xs:complexType>
                        <xs:sequence minOccurs="1" maxOccurs="unbounded">
                            <xs:element name="programming-language">
                            	<xs:complexType>
				                    <xs:attribute name="name" type="xs:string" use="required"/>
	                                <xs:attribute name="extends" type="xs:string"/>
                            	</xs:complexType>
			                </xs:element>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="head" minOccurs="0" maxOccurs="1">
                    <xs:complexType>
                        <xs:sequence minOccurs="1" maxOccurs="unbounded">
                            <xs:any processContents="lax"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
                <xs:element name="site-map" type="site-map" minOccurs="1" maxOccurs="1"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	
	<!-- ======== -->
	<!-- Site Map -->
	<!-- ======== -->
	
	<xs:complexType name="site-map">
		<xs:choice minOccurs="1" maxOccurs="unbounded">
			<xs:element name="top" minOccurs="0" maxOccurs="1">
				<xs:complexType>
					<xs:choice minOccurs="1" maxOccurs="1">
						<xs:element ref="page"/>
						<xs:element ref="xhtml-page"/>
					</xs:choice>
				</xs:complexType>
			</xs:element>
			<xs:element name="landing-pages" minOccurs="0" maxOccurs="1">
				<xs:complexType>
					<xs:choice minOccurs="1" maxOccurs="unbounded">
						<xs:element ref="page"/>
						<xs:element ref="xhtml-page"/>
					</xs:choice>
				</xs:complexType>
			</xs:element>
			
			<xs:element name="item" type="site-map.item"/>
			<xs:element name="group" type="site-map.group"/>
		</xs:choice>
	</xs:complexType>
	
	<xs:complexType name="site-map.item">
		<xs:choice minOccurs="0" maxOccurs="unbounded">
			<xs:element ref="set"/>
			<xs:element ref="class"/>
			<xs:element ref="guide"/>
			<xs:element ref="page"/>
			<xs:element ref="xhtml-page"/>
		</xs:choice>
		
		<xs:attribute name="id" type="xs:string" use="required"/>
		<xs:attribute name="title" type="xs:string" use="required" />
		<xs:attribute name="href" type="xs:string" />
	</xs:complexType>
	
	<xs:complexType name="site-map.group">
		<xs:choice minOccurs="1" maxOccurs="unbounded">
			<xs:element name="item" type="site-map.item"/>
		</xs:choice>
		
		<xs:attribute name="id" type="xs:string" use="required"/>
		<xs:attribute name="title" type="xs:string" use="required" />
	</xs:complexType>
</xs:schema>